    \vskip6.5mm
    {
        \fontsize{32}{32pt}
        \selectfont
        \bfseries
        \boldmath
        Phase 4 Space
    }



    \vskip20mm

    {
        \fontsize{21}{24pt}
        \selectfont
        \bfseries
        \boldmath
        \@title
    }

    \vskip110mm


    \hfill
    \begin{minipage}[l]{\textwidth - 0mm}
        \@author \\
        \monthname[\the\month], \the\year \\
        Revision: \@revision
    \end{minipage}


}


