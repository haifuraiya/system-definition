\@ifclassloaded{memoir}
{
    \newcommand{\projectfrontpage}
    {
        \begin{titlingpage}
            \calccentering{\unitlength}
            \begin{adjustwidth*}{\unitlength}{-\unitlength}
                \printtitle
            \end{adjustwidth*}
        \end{titlingpage}
    }
}
{
    \newcommand{\projectfrontpage}
    {
        \begin{titlepage}
            \printtitle
        \end{titlepage}
    }
}

\newcommand{\printtitle}
{
    \renewcommand{\sfdefault}{phv}
